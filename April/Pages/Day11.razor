@page "/day11"
@using April.Problems
@using global::Shared.Helpers

<h4 class="mb-3">
    <a href="@_problem.Url" target="_blank" class="ml-md-auto">@_problem.Title</a>
</h4>

<div class="mb-3">
    <label for="Root" class="form-label">Root</label>
    <input type="text" @bind="Root" class="form-control" id="Root" placeholder='[1,2,3,4,5,null,6,7,null,null,null,null,null,null,8]'>
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li>The number of nodes in the tree is in the range <code>[1, 10<sup>4</sup>]</code>.</li>
        <li><code>1 &lt;= Node.val &lt;= 100</code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Root { get; set; }
    private string Output { get; set; }

    readonly DeepestLeavesSum _problem = new DeepestLeavesSum();

    private void Run()
    {
        try
        {
            var root = DataConverter.ConvertStringArrayToTreeNode(Root);
            Output = _problem.FindSumUsingBfs(root).ToString();
        }
        catch (Exception ex)
        {
            Output = ex.Message;
        }
    }
}
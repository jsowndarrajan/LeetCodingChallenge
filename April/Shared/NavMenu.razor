<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">April 2021</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu" style="height: 95%; overflow: scroll; overflow-x: hidden;">
    <ul class="nav flex-column" style="margin-bottom: 20px;">
        
        @for (var i = 1; i <= DateTime.Now.Day; i++)
        {
            var local_i = i;
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@($"/day{@i}")">
                    <span>@($"Day {@local_i}")</span>
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
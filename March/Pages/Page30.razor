@page "/day30"
@using March.Problems
@using global::Shared.Helpers

<h4 class="mb-3">
    <a href="@_problem.Url" target="_blank" class="ml-md-auto">@_problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Envelopes</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="[[5,4],[6,4],[6,7],[2,3]]">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;= Envelopes.Length &lt;= 5000</code></li>
        <li><code>Envelopes[i].length == 2</code></li>
        <li><code>1 &lt;= w<sub>i</sub>, h<sub>i</sub> &lt;= 10<sup>4</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private string Output { get; set; }

    readonly RussianDollEnvelopes _problem = new RussianDollEnvelopes();

    private void Run()
    {
        try
        {
            var envelopes = DataConverter.ConvertStringToNestedArray(Input);
            Output = _problem.MaxEnvelopes(envelopes).ToString();
        }
        catch (Exception ex)
        {
            Output = ex.Message;
        }
    }
}
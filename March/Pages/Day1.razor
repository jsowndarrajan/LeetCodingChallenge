@page "/"
@page "/day1"
@using March.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="candyType" class="form-label">CandyType</label>
    <input type="text" @bind="CandyType" class="form-control" id="candyType" placeholder="[1,1,2,2,3,3]">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>n == CandyType.length</code></li>
        <li><code>2 &lt;= n &lt;= 10<sup>4</sup></code></li>
        <li><code>n is even.</code></li>
        <li><code>-10<sup>5</sup> &lt;= CandyType[i] &lt;= 10<sup>5</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string CandyType { get; set; }
    private string Output { get; set; }

    DistributeCandies problem = new DistributeCandies();

    private void Run()
    {
        Output = problem.Calculate(CandyType);
    }
}
@page "/day12"
@using March.Problems
@using global::Shared.Helpers

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="s" class="form-label">S</label>
    <input type="text" @bind="S" class="form-control" id="s" placeholder="00110110">
</div>
<div class="mb-3">
    <label for="k" class="form-label">K</label>
    <input type="text" @bind="K" class="form-control" id="k" placeholder="2">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;= S.Length &lt;= 5 * 10^5</code></li>
        <li><code>S</code> consists of 0's and 1's only.</li>
        <li><code>1 &lt;= K &lt;= 20</code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string S { get; set; }
    private string K { get; set; }
    private string Output { get; set; }

    CheckIfAStringContainsAllBinaryCodesOfSizeK problem = new CheckIfAStringContainsAllBinaryCodesOfSizeK();

    private void Run()
    {

        try
        {
            Output = int.TryParse(K, out var k) ? problem.HasAllCodes(S, k).ToString() : Messages.InvalidInput;
        }
        catch
        {
            Output = Messages.InvalidInput;
        }
    }
}
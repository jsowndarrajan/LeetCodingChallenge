@page "/day14"
@using March.Problems
@using global::Shared.Helpers

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Input</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="[1,2,3,4,5]">
</div>
<div class="mb-3">
    <label for="k" class="form-label">K</label>
    <input type="text" @bind="K" class="form-control" id="k" placeholder="2">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li>The number of nodes in the list is <code>n</code>.</li>
        <li><code>1 &lt;= K &lt;= n &lt;= 10<sup>5</sup></code></li>
        <li><code>0 &lt;= Node.val &lt;= 100</code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private string K { get; set; }
    private string Output { get; set; }

    SwappingNodesInALinkedList problem = new SwappingNodesInALinkedList();

    private void Run()
    {

        try
        {
            if (int.TryParse(K, out var k))
            {
                var head = ListHelper.ConvertStringArrayToListNode(Input);
                Output = problem.SwapNodes(head,k).ToString();
            }
            else
            {
                Output = Messages.InvalidInput;
            }
        }
        catch
        {
            Output = Messages.InvalidInput;
        }
    }
}
@page "/day13"
@using March.Problems
@using global::Shared.Helpers

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Input</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="[2,4]">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;= arr.length &lt;= 1000</code></li>
        <li><code>2 &lt;= arr[i] &lt;= 10<sup>9</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private string Output { get; set; }

    BinaryTreesWithFactors problem = new BinaryTreesWithFactors();

    private void Run()
    {

        try
        {
            var input = DataConverter.ConvertStringToIntArray(Input);
            Output = problem.NumFactoredBinaryTrees(input).ToString();
        }
        catch
        {
            Output = Messages.InvalidInput;
        }
    }
}
@page "/"
@page "/day1"
@using August.Problems
@using global::Shared.Helpers

<h4 class="mb-3">
    <a href="@_problem.Url" target="_blank" class="ml-md-auto">@_problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Grid</label>
    <input type="text" @bind="Grid" class="form-control" id="input" placeholder='[[0,1],[1,0]]'>
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>n == Grid.Length</code></li>
        <li><code>n == Grid[i].Length</code></li>
        <li><code>1 &lt;= n, n &lt;= 500</code></li>
        <li><code>grid[i][j] is either 0 or 1</code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Grid { get; set; }
    private string Output { get; set; }

    readonly MakingALargeIsland _problem = new();

    private void Run()
    {
        try
        {
            var grid = DataConverter.ConvertStringToNestedArray(Grid);
            Output = _problem.LargestIsland(grid).ToString();
        }
        catch (Exception ex)
        {
            Output = ex.Message;
        }
    }
}
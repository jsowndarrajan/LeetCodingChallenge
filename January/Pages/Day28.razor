@page "/day28"
@using January.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="n" class="form-label">N</label>
    <input type="text" @bind="Input1" class="form-control" id="n" placeholder="3">
</div>
<div class="mb-3">
    <label for="k" class="form-label">K</label>
    <input type="text" @bind="Input2" class="form-control" id="k" placeholder="27">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;= n &lt;= 10<sup>5</sup></code></li>
        <li><code>n &lt;= k &lt;= 26 * n</code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input1 { get; set; }
    private string Input2 { get; set; }
    private string Output { get; set; }

    SmallestStringWithAGivenNumericValue problem = new SmallestStringWithAGivenNumericValue();

    private void Run()
    {
        Output = problem.GetSmallestString(Input1, Input2);
    }
}
@page "/day10"
@using January.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>
<div class="mb-3">
    <label for="instructions" class="form-label">Instructions</label>
    <input type="text" @bind="Instructions" class="form-control" id="instructions" placeholder="[1,5,6,2]">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;= instructions.length &lt;= 10<sup>5</sup></code></li>
        <li><code>1 &lt;= instructions[i] &lt;= 10<sup>5</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Instructions { get; set; }
    private string Output { get; set; }

    CreateSortedArrayThroughInstructions problem = new CreateSortedArrayThroughInstructions();

    private void Run()
    {
        Output = problem.CreateSortedArray(Instructions);
    }
}
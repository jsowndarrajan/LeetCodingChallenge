@page "/day14"
@using January.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>
<div class="mb-3">
    <label for="numbers" class="form-label">Numbers</label>
    <input type="text" @bind="Numbers" class="form-control" id="numbers" placeholder="[1,1,4,2,3]">
</div>
<div class="mb-3">
    <label for="target" class="form-label">Target</label>
    <input type="text" @bind="Target" class="form-control" id="target" placeholder="5">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;= Numbers.Length &lt;= 10<sup>5</sup></code></li>
        <li><code>1 &lt;= Numbers[i] &lt;= 10<sup>4</sup></code></li>
        <li><code>1 &lt;= Target &lt;= 10<sup>9</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Numbers { get; set; }
    private string Target { get; set; }
    private string Output { get; set; }

    MinimumOperationsToReduceXToZero problem = new MinimumOperationsToReduceXToZero();

    private void Run()
    {
        Output = problem.MinOperations(Numbers, Target);
    }
}
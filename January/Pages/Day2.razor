@page "/day2"
@using January.Problems
@using global::Shared.Models

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="binaryTree" class="form-label">Binary Tree Array</label>
    <input type="text" @bind="BinaryTree" class="form-control" id="binaryTree" placeholder="[7,4,3,null,null,6,19]">
</div>

<div class="mb-3">
    <label for="target" class="form-label">Target Number</label>
    <input type="text" @bind="Target" class="form-control" id="target" placeholder="3">
</div>

<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li>The number of nodes in the <code>tree</code> is in the range <code>[1, 10^4]</code>.</li>
        <li>The values of the nodes of the <code>tree</code> are unique.</li>
        <li><code>target</code> node is a&nbsp;node from the <code>original</code> tree and is not <code>null</code>.</li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string BinaryTree { get; set; }
    private string Target { get; set; }
    private string Output { get; set; }

    FindACorrespondingNodeInAClonedBinaryTree problem = new FindACorrespondingNodeInAClonedBinaryTree();

    private void Run()
    {
        Output = problem.GetTargetCopy(BinaryTree, Target);
    }
}
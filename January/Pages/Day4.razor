@page "/day4"
@using January.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="l1" class="form-label">List1 (l1)</label>
    <input type="text" @bind="L1" class="form-control" id="l1" placeholder="[1,2,4]">
</div>
<div class="mb-3">
    <label for="l2" class="form-label">List2 (l2)</label>
    <input type="text" @bind="L2" class="form-control" id="l2" placeholder="[1,3,4]">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li>The number of nodes in both lists is in the range <code>[0, 50]</code>.</li>
        <li><code>-100 &lt;= Node.val &lt;= 100</code></li>
        <li>Both <code>l1</code> and <code>l2</code> are sorted in <strong>non-decreasing</strong> order.</li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string L1 { get; set; }
    private string L2 { get; set; }
    private string Output { get; set; }

    MergeTwoSortedLists problem = new MergeTwoSortedLists();

    private void Run()
    {
        Output = problem.MergeTwoLists(L1, L2);
    }
}
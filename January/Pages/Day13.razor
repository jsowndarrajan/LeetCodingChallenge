@page "/day13"
@using January.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>
<div class="mb-3">
    <label for="people" class="form-label">People</label>
    <input type="text" @bind="People" class="form-control" id="people" placeholder="[3,5,3,4]">
</div>
<div class="mb-3">
    <label for="limit" class="form-label">Limit</label>
    <input type="text" @bind="Limit" class="form-control" id="l2" placeholder="5">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;=&nbsp;people.length &lt;= 50000</code></li>
        <li><code>1 &lt;= people[i] &lt;=&nbsp;limit &lt;= 30000</code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string People { get; set; }
    private string Limit { get; set; }
    private string Output { get; set; }

    BoatsToSavePeople problem = new BoatsToSavePeople();

    private void Run()
    {
        Output = problem.NumRescueBoats(People, Limit);
    }
}
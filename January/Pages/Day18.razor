@page "/day18"
@using January.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>
<div class="mb-3">
    <label for="input" class="form-label">Input</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="[1,2,3,4]">
</div>
<div class="mb-3">
    <label for="k" class="form-label">K</label>
    <input type="text" @bind="K" class="form-control" id="k" placeholder="5">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>1 &lt;= Input.length &lt;= 10<sup>5</sup></code></li>
        <li><code>1 &lt;= Input[i] &lt;= 10<sup>9</sup></code></li>
        <li><code>1 &lt;= K &lt;= 10<sup>9</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private string K { get; set; }
    private string Output { get; set; }

    MaxNumberOfKSumPairs problem = new MaxNumberOfKSumPairs();

    private void Run()
    {
        Output = problem.MaxOperationsByUsingArraySort(Input, K);
    }
}
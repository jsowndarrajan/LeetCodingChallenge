@page "/day24"
@using February.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Input</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="()()">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ol>
        <li><code>S</code> is a balanced parentheses string, containing only <code>(</code> and <code>)</code>.</li>
        <li><code>2 &lt;= Input.length &lt;= 50</code></li>
    </ol>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private int? Output { get; set; }

    ScoreOfParentheses problem = new ScoreOfParentheses();

    private void Run()
    {
        Output = problem.Compute(Input);
    }
}
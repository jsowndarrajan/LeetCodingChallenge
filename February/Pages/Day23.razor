@page "/day23"
@using February.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Input</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="[[1,4,7,11,15],[2,5,8,12,19],[3,6,9,16,22],[10,13,14,17,24],[18,21,23,26,30]]">
</div>
<div class="mb-3">
    <label for="target" class="form-label">Target</label>
    <input type="text" @bind="Target" class="form-control" id="target" placeholder="5">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>m == matrix.length</code></li>
        <li><code>n == matrix[i].length</code></li>
        <li><code>1 &lt;= n, m &lt;= 300</code></li>
        <li><code>-10<sup>9</sup> &lt;= matix[i][j] &lt;= 10<sup>9</sup></code></li>
        <li>All the integers in each row are <strong>sorted</strong> in ascending order.</li>
        <li>All the integers in each column are <strong>sorted</strong> in ascending order.</li>
        <li><code>-10<sup>9</sup> &lt;= target &lt;= 10<sup>9</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private string Target { get; set; }
    private string Output { get; set; }

    SearchA2DMatrix2 problem = new SearchA2DMatrix2();

    private void Run()
    {
        Output = problem.SearchMatrix(Input, Target);
    }
}
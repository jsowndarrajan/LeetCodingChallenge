@page "/day14"
@using February.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Input</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="[[1,3],[0,2],[1,3],[0,2]]">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>graph.length == n</code></li>
        <li><code>1 &lt;= n &lt;= 100</code></li>
        <li><code>0 &lt;= graph[u].length &lt; n</code></li>
        <li><code>0 &lt;= graph[u][i] &lt;= n - 1</code></li>
        <li><code>graph[u]</code>&nbsp;does not contain&nbsp;<code>u</code>.</li>
        <li>All the values of <code>graph[u]</code> are <strong>unique</strong>.</li>
        <li>If <code>graph[u]</code> contains <code>v</code>, then <code>graph[v]</code> contains <code>u</code>.</li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private string Output { get; set; }

    BipartiteGraph problem = new BipartiteGraph();

    private void Run()
    {
        Output = problem.IsBipartite(Input);
    }
}
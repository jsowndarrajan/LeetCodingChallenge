@page "/day17"
@using February.Problems

<h4 class="mb-3">
    <a href="@problem.Url" target="_blank" class="ml-md-auto">@problem.Title</a>
</h4>

<div class="mb-3">
    <label for="input" class="form-label">Input</label>
    <input type="text" @bind="Input" class="form-control" id="input" placeholder="[1,8,6,2,5,4,8,3,7]">
</div>
<div class="mb-3">
    <label class="form-label">Constraints</label>
    <ul>
        <li><code>n == height.length</code></li>
        <li><code>2 &lt;= n &lt;= 3 * 10<sup>4</sup></code></li>
        <li><code>0 &lt;= height[i] &lt;= 3 * 10<sup>4</sup></code></li>
    </ul>
</div>
<div class="mb-3">
    <label class="form-label">Output: <code>@Output</code></label>
</div>

<div class="mb-3">
    <button class="btn btn-primary mb-3" @onclick="Run">Run</button>
</div>

@code {
    private string Input { get; set; }
    private string Output { get; set; }

    ContainerWithMostWater problem = new ContainerWithMostWater();

    private void Run()
    {
        Output = problem.MaxArea(Input);
    }
}